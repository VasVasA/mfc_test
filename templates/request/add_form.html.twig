{% extends 'base.html.twig' %}

{% block title %}Создание заявки{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card bg-light card-form">
                <h1 class="card-title">Добавление заявки</h1>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-element">
                        <label for="textarea">{{ form_label(form.title) }}</label><br>
                        {{ form_widget(form.title) }}
                    </div>
                    <div class="form-element">
                        <label for="textarea">{{ form_label(form.content) }}</label><br>
                        {{ form_widget(form.content) }}
                    </div>
                    <div class="form-element">
                        <label for="textarea">{{ form_label(form.imageFile) }}</label><br>
                        {{ form_widget(form.imageFile) }}
                    </div>
                    <div class="form-element">
                        <button type="submit">Отправить заявку</button>
                    </div>
                    {{ form_end(form)  }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Список заявок{% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="wrapper">
    <div class="container">
        <h1>Список заявок</h1>
        <a href="{{ path('request_create') }}">Создать заявку</a>
        {% for request in requests %}
            <div class="bg-primary card text-white">
                <div class="card-body">
                    <div>Заголовок: {{ request.title }}</div>
                    <div>Текст: {{ request.content }}</div>
                    <div>Изображения: {{ request.image }}</div>
                    <div>Статус: {{ request.status }}</div>

                    <div class="text-white bg-white"><a href = "{{ path('request_view', {'request':request.id}) }}">Просмотреть</a></div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
